<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\..\FrameXML\UI.xsd">

    <Frame name="MIOG_AdventureJournalAbilityTemplate" inherits="ResizeLayoutFrame, BackdropTemplate" virtual="true">
        <KeyValues>
			<KeyValue key="minimumHeight" value="20" type="number"/>
		</KeyValues>

        <Frames>
            <Button parentKey="ExpandFrame" inherits="UIButtonTemplate" mixin="MultiStateButtonMixin">
                <Size x="20" y="20" />
                <Anchors>
                    <Anchor point="TOPLEFT" relativeKey="$parent" relativePoint="TOPLEFT" x="5" y="-2"/>
                </Anchors>
                <Scripts>
                    <OnLoad>
                        self:OnLoad()
                        self:SetMaxStates(2)
                        self:SetTexturesForBaseState("UI-HUD-ActionBar-PageDownArrow-Up", "UI-HUD-ActionBar-PageDownArrow-Down", "UI-HUD-ActionBar-PageDownArrow-Mouseover", "UI-HUD-ActionBar-PageDownArrow-Disabled")
                        self:SetTexturesForState1("UI-HUD-ActionBar-PageUpArrow-Up", "UI-HUD-ActionBar-PageUpArrow-Down", "UI-HUD-ActionBar-PageUpArrow-Mouseover", "UI-HUD-ActionBar-PageUpArrow-Disabled")
                        self:SetState(false)
                    </OnLoad>
                    <OnClick>
					    PlaySound(SOUNDKIT.IG_MAINMENU_OPTION_CHECKBOX_ON)
					    self:AdvanceState()
                        self:GetParent().DetailedInformation:SetShown(not self:GetParent().DetailedInformation:IsShown())
                        self:GetParent():MarkDirty()
                    </OnClick>
                </Scripts>
            </Button>
        </Frames>

        <Scripts>
            <OnLoad>
                self:SetBackdrop( {edgeFile="Interface\\ChatFrame\\ChatFrameBackground", edgeSize = 1} )
                self:SetBackdropBorderColor(PAPER_FRAME_EXPANDED_COLOR:GetRGB())
            </OnLoad>
        </Scripts>

        <Layers>
            <Layer level="BACKGROUND">
                <Texture inherits="UI-PaperOverlay-AbilityTextBG" parentKey="Background" setAllPoints="true">
                    <Size x="12" y="12"/>
                </Texture>
            </Layer>

            <Layer level="ARTWORK">
                <Texture parentKey="Icon">
                    <Size x="16" y="16" />
                    <Anchors>
                        <Anchor point="LEFT" relativeKey="$parent.ExpandFrame" relativePoint="RIGHT" />
                    </Anchors>
                </Texture>
            </Layer>

            <Layer level="OVERLAY">
                <FontString parentKey="Name" font="Interface\Addons\MythicIOGrabber\res\fonts\LiberationMono-Regular.ttf" justifyH="CENTER" justifyV="MIDDLE" outline="NORMAL" text="AbilityName">
                    <FontHeight val="11" />
                    <Anchors>
                        <Anchor point="LEFT" relativeKey="$parent.Icon" relativePoint="RIGHT" x="1" />
                    </Anchors>
                </FontString>
            </Layer>            
        </Layers>

        <Frames>
            <Frame parentKey="SwitchPanel">
                <Size x="100" y="20"/>
                <Anchors>
                    <Anchor point="LEFT" relativeKey="$parent.Name" relativePoint="RIGHT"/>
                </Anchors>

                <Frames>
                    <Button parentKey="Switch1" inherits="UIPanelButtonTemplate">
                        <Size x="20" y="20" />
                        <Anchors>
                            <Anchor point="LEFT" relativeKey="$parent" relativePoint="LEFT"/>
                        </Anchors>
                        <Scripts>
                            <OnClick>
                                local detailedInformation = self:GetParent():GetParent().DetailedInformation
                                detailedInformation.Base:Hide()
                                detailedInformation.Difficulty1:Show()
                                detailedInformation.Difficulty2:Hide()
                                detailedInformation.Difficulty3:Hide()
                                detailedInformation.Difficulty4:Hide()

                                detailedInformation:MarkDirty()
                            </OnClick>
                        </Scripts>
                    </Button>

                    <Button parentKey="Switch2" inherits="UIPanelButtonTemplate">
                        <Size x="20" y="20" />
                        <Anchors>
                            <Anchor point="LEFT" relativeKey="$parent.Switch1" relativePoint="RIGHT"/>
                        </Anchors>
                        <Scripts>
                            <OnClick>
                                local detailedInformation = self:GetParent():GetParent().DetailedInformation
                                detailedInformation.Base:Hide()
                                detailedInformation.Difficulty1:Hide()
                                detailedInformation.Difficulty2:Show()
                                detailedInformation.Difficulty3:Hide()
                                detailedInformation.Difficulty4:Hide()

                                detailedInformation:MarkDirty()
                            </OnClick>
                        </Scripts>
                    </Button>

                    <Button parentKey="Switch3" inherits="UIPanelButtonTemplate">
                        <Size x="20" y="20" />
                        <Anchors>
                            <Anchor point="LEFT" relativeKey="$parent.Switch2" relativePoint="RIGHT"/>
                        </Anchors>
                        <Scripts>
                            <OnClick>
                                local detailedInformation = self:GetParent():GetParent().DetailedInformation
                                detailedInformation.Base:Hide()
                                detailedInformation.Difficulty1:Hide()
                                detailedInformation.Difficulty2:Hide()
                                detailedInformation.Difficulty3:Show()
                                detailedInformation.Difficulty4:Hide()

                                detailedInformation:MarkDirty()
                            </OnClick>
                        </Scripts>
                    </Button>

                    <Button parentKey="Switch4" inherits="UIPanelButtonTemplate">
                        <Size x="20" y="20" />
                        <Anchors>
                            <Anchor point="LEFT" relativeKey="$parent.Switch3" relativePoint="RIGHT"/>
                        </Anchors>
                        <Scripts>
                            <OnClick>
                                local detailedInformation = self:GetParent():GetParent().DetailedInformation
                                detailedInformation.Base:Hide()
                                detailedInformation.Difficulty1:Hide()
                                detailedInformation.Difficulty2:Hide()
                                detailedInformation.Difficulty3:Hide()
                                detailedInformation.Difficulty4:Show()

                                detailedInformation:MarkDirty()
                            </OnClick>
                        </Scripts>
                    </Button>
                </Frames>
            </Frame>

            <Frame parentKey="DetailedInformation" inherits="VerticalLayoutFrame" hidden="true">
                <KeyValues>
                    <KeyValue key="topPadding" value="5" type="number"/>
                    <KeyValue key="bottomPadding" value="10" type="number"/>
                    <KeyValue key="leftPadding" value="5" type="number"/>
                    <KeyValue key="rightPadding" value="5" type="number"/>
                    <KeyValue key="spacing" value="4" type="number"/>
                </KeyValues>

                <Anchors>
                    <Anchor point="BOTTOMLEFT" relativeKey="$parent" relativePoint="BOTTOMLEFT"/>
                    <Anchor point="BOTTOMRIGHT" relativeKey="$parent" relativePoint="BOTTOMRIGHT"/>
                </Anchors>

                <Frames>
                    <Frame parentKey="Base" inherits="MIOG_AdventureJournalAbilityDifficultyTemplate">
                        <KeyValues>
                            <KeyValue key="layoutIndex" value="1" type="number"/>
                        </KeyValues>
                    </Frame>

                    <Frame parentKey="Difficulty1" inherits="MIOG_AdventureJournalAbilityDifficultyTemplate">
                        <KeyValues>
                            <KeyValue key="layoutIndex" value="2" type="number"/>
                        </KeyValues>
                    </Frame>

                    <Frame parentKey="Difficulty2" inherits="MIOG_AdventureJournalAbilityDifficultyTemplate">
                        <KeyValues>
                            <KeyValue key="layoutIndex" value="3" type="number"/>
                        </KeyValues>
                    </Frame>

                    <Frame parentKey="Difficulty3" inherits="MIOG_AdventureJournalAbilityDifficultyTemplate">
                        <KeyValues>
                            <KeyValue key="layoutIndex" value="4" type="number"/>
                        </KeyValues>
                    </Frame>

                    <Frame parentKey="Difficulty4" inherits="MIOG_AdventureJournalAbilityDifficultyTemplate">
                        <KeyValues>
                            <KeyValue key="layoutIndex" value="5" type="number"/>
                        </KeyValues>
                    </Frame>
                </Frames>

                <Layers>
                    <Layer level="BORDER">
                        <Texture parentKey="Divider1" atlas="dragonflight-weeklyrewards-divider">
                            <Size y="5" />
                            <Anchors>
                                <Anchor point="TOPLEFT" relativeKey="$parent" relativePoint="TOPLEFT" x="1"/>
                                <Anchor point="TOPRIGHT" relativeKey="$parent" relativePoint="TOPRIGHT" x="-1"/>
                            </Anchors>
                        </Texture>
                    </Layer>
                </Layers>
            </Frame>
        </Frames>
    </Frame>
</Ui>