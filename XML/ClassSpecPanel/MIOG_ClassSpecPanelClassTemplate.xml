<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\..\FrameXML\UI.xsd">
    <Frame name="MIOG_ClassSpecPanelClassTemplate" virtual="true">
        <Size x="26" y="26" />

        <Layers>            
            <Layer level="BORDER">
                <Texture parentKey="Border" setAllPoints="true" />
            </Layer>
            
            <Layer level="ARTWORK">
                <Texture parentKey="Icon">
                    <Anchors>
                        <Anchor point="TOPLEFT" relativeKey="$parent.Border" x="1" y="-1" />
                        <Anchor point="BOTTOMRIGHT" relativeKey="$parent.Border" x="-1" y="1" />
                    </Anchors>
                </Texture>
            </Layer>

            <Layer level="OVERLAY">
                <FontString parentKey="FontString" font="GameFontHighlight" justifyH="CENTER" justifyV="MIDDLE" outline="NORMAL">
                    <Anchors>
                        <Anchor point="CENTER" relativeKey="$parent.Icon" />
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
    </Frame>
</Ui>