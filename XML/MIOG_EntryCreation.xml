<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\..\FrameXML\UI.xsd">
    <Font name="LibMono" font="Interface\Addons\MythicIOGrabber\res\fonts\LiberationMono-Regular.ttf" outline="NORMAL" fixedSize="false">
        <FontHeight val="11" />
    </Font>

    <Frame name="MIOG_EntryCreation" inherits="BackdropTemplate" virtual="true">
        <Anchors>
            <Anchor point="TOPLEFT" relativeKey="$parent" relativePoint="TOPLEFT" />
            <Anchor point="BOTTOMRIGHT" relativeKey="$parent" relativePoint="BOTTOMRIGHT" />
        </Anchors>

        <Frames>
            <Frame parentKey="ActivityDropDown" inherits="MIOG_DropDownMenu" mixin="SlickDropDown">
                <Size y="25" />
                <Anchors>
                    <Anchor point="TOPLEFT" relativeKey="$parent" relativePoint="TOPLEFT"/>
                    <Anchor point="TOPRIGHT" relativeKey="$parent" relativePoint="TOPRIGHT"/>
                </Anchors>
            </Frame>
            

            <Frame parentKey="DifficultyDropDown" inherits="MIOG_DropDownMenu" mixin="SlickDropDown">
                <Size y="25" />
                <Anchors>
                    <Anchor point="TOPLEFT" relativeKey="$parent" relativePoint="TOPLEFT" y="-25"/>
                </Anchors>
            </Frame>

            <Frame parentKey="PlaystyleDropDown" inherits="MIOG_DropDownMenu" mixin="SlickDropDown">
                <Size y="25" />
                <Anchors>
                    <Anchor point="TOPLEFT" relativeKey="$parent" relativePoint="TOPLEFT" y="-50"/>
                </Anchors>
            </Frame>

            <EditBox parentKey="Name" autoFocus="false" hidden="true">
                <Anchors>
                    <Anchor point="TOPLEFT" relativeKey="$parent.PlaystyleDropDown" relativePoint="BOTTOMLEFT" x="10" y="-5"/>
                </Anchors>
            </EditBox>

            <EditBox parentKey="Description" inherits="LargeInputBoxTemplate" autoFocus="false" multiLine="true">
                <Size x="350" y="25" />
                <Anchors>
                    <Anchor point="TOPLEFT" relativeKey="$parent.Name" relativePoint="BOTTOMLEFT"/>
                </Anchors>
            </EditBox>

            <EditBox parentKey="Rating" inherits="InputBoxTemplate" autoFocus="false">
                <Size x="100" y="25" />
                <Anchors>
                    <Anchor point="TOPLEFT" relativeKey="$parent.Description" relativePoint="BOTTOMLEFT" y="-10"/>
                </Anchors>
            </EditBox>

            <EditBox parentKey="ItemLevel" inherits="InputBoxTemplate" autoFocus="false">
                <Size x="100" y="25" />
                <Anchors>
                    <Anchor point="TOPLEFT" relativeKey="$parent.Rating" relativePoint="BOTTOMLEFT" y="-10"/>
                </Anchors>
            </EditBox>

            <EditBox parentKey="VoiceChat" inherits="InputBoxTemplate" autoFocus="false">
                <Size x="100" y="25" />
                <Anchors>
                    <Anchor point="TOPLEFT" relativeKey="$parent.ItemLevel" relativePoint="BOTTOMLEFT" y="-10"/>
                </Anchors>
            </EditBox>

            <CheckButton parentKey="PrivateGroup" inherits="UICheckButtonTemplate">
                <Size x="22" y="22" />
                <Anchors>
                    <Anchor point="TOPLEFT" relativeKey="$parent.VoiceChat" relativePoint="BOTTOMLEFT" y="-10"/>
                </Anchors>
            </CheckButton>

            <CheckButton parentKey="CrossFaction" inherits="UICheckButtonTemplate">
                <Size x="22" y="22" />
                <Anchors>
                    <Anchor point="TOPLEFT" relativeKey="$parent.PrivateGroup" relativePoint="BOTTOMLEFT" y="-10"/>
                </Anchors>
            </CheckButton>
        </Frames>
    </Frame>
</Ui>