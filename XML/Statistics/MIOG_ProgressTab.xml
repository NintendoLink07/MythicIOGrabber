                                        <Anchor point="BOTTOMRIGHT" relativeKey="$parent" relativePoint="BOTTOMRIGHT" x="-1" y="1"/>
                                    </Anchors>
                                    <Color r="0" g="0" b="0" a="0.75" />
                                </Texture>
