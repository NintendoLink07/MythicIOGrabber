<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\..\FrameXML\UI.xsd">
    <Font name="LibMono" font="Interface\Addons\MythicIOGrabber\res\fonts\LiberationMono-Regular.ttf" outline="NORMAL">
        <FontHeight val="11" />
    </Font>
    
    <Frame name="MIOG_RaidBossFrameTemplate" virtual="true">
        <Layers>
            <Layer level="ARTWORK">
                <Texture parentKey="Icon" enableMouseClicks="true">
                    <Size x="21" y="21" />

                    <Anchors>
                        <Anchor point="TOPLEFT" relativeKey="$parent" relativePoint="TOPLEFT" x="2" y="-1" />
                    </Anchors>
                </Texture>
            </Layer>

            <Layer level="BORDER">
                <Texture parentKey="Border">
                    <Size x="25" y="25" />
                    <Anchors>
                        <Anchor point="TOPLEFT" relativeKey="$parent.Icon" relativePoint="TOPLEFT" x="-2" y="2" />
                    </Anchors>
                </Texture>
            </Layer>

            <Layer level="OVERLAY">
                <FontString parentKey="Index" font="LibMono" justifyH="LEFT">
                    <FontHeight val="11"/>
                    <Anchors>
                        <Anchor point="TOPLEFT" relativeKey="$parent.Icon" relativePoint="TOPLEFT" />
                    </Anchors>
                </FontString>
            </Layer>

        </Layers>
    </Frame>
</Ui>