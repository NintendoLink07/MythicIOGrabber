<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\..\FrameXML\UI.xsd">
    <Frame name="MIOG_RaidStatisticsRaidTemplate" inherits="BackdropTemplate" virtual="true">
        <Size y="32" />

        <Frames>
            <Frame parentKey="Normal">
                <Size x="45" y="20" />
                <Anchors>
                    <Anchor point="LEFT" relativeKey="$parent" relativePoint="LEFT"/>
                </Anchors>

                <Layers>
                    <Layer level="OVERLAY">
                        <FontString parentKey="Current" font="SystemFont_Shadow_Med3" justifyH="CENTER" justifyV="MIDDLE" text="0/8" outline="NORMAL">
                            <Anchors>
                                <Anchor point="CENTER" relativeKey="$parent" relativePoint="CENTER"/>
                            </Anchors>
                        </FontString>
                    </Layer>
                </Layers>
            </Frame>

            <Frame parentKey="Heroic">
                <Size x="45" y="20" />
                <Anchors>
                    <Anchor point="LEFT" relativeKey="$parent.Normal" relativePoint="RIGHT"/>
                </Anchors>

                <Layers>
                    <Layer level="OVERLAY">
                        <FontString parentKey="Current" font="SystemFont_Shadow_Med3" justifyH="CENTER" justifyV="MIDDLE" text="0/8" outline="NORMAL">
                            <Anchors>
                                <Anchor point="CENTER" relativeKey="$parent" relativePoint="CENTER"/>
                            </Anchors>
                        </FontString>
                    </Layer>
                </Layers>
            </Frame>

            <Frame parentKey="Mythic">
                <Size x="45" y="20" />
                <Anchors>
                    <Anchor point="LEFT" relativeKey="$parent.Heroic" relativePoint="RIGHT"/>
                </Anchors>

                <Layers>
                    <Layer level="OVERLAY">
                        <FontString parentKey="Current" font="SystemFont_Shadow_Med3" justifyH="CENTER" justifyV="MIDDLE" text="0/8" outline="NORMAL">
                            <Anchors>
                                <Anchor point="CENTER" relativeKey="$parent" relativePoint="CENTER"/>
                            </Anchors>
                        </FontString>
                    </Layer>
                </Layers>
            </Frame>
        </Frames>
    </Frame>
</Ui>