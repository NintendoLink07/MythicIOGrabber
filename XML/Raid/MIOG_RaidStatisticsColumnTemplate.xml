<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\..\FrameXML\UI.xsd">
    <Frame name="MIOG_RaidStatisticsColumnTemplate" inherits="BackdropTemplate" virtual="true">
        <Size x="135"/>

        <Layers>
            <Layer level="BACKGROUND">
                <Texture parentKey="Background" horizTile="true" vertTile="true" setAllPoints="true" />
            </Layer>

            <Layer level="BORDER">
                <Texture parentKey="TransparentDark" setAllPoints="true">
                    <Color r="0.1" g="0.1" b="0.1" a="0.4" />
                </Texture>
            </Layer>

            <Layer level="OVERLAY">
                <FontString parentKey="ShortName" font="Interface\Addons\MythicIOGrabber\res\fonts\LiberationMono-Regular.ttf" justifyH="CENTER" justifyV="MIDDLE" text="NAME" outline="NORMAL" >
                    <FontHeight val="13" />
                    <Anchors>
                        <Anchor point="TOP" relativeKey="$parent" relativePoint="TOP" y="-5" />
                    </Anchors>
                </FontString>

                <FontString parentKey="Heroic" font="Interface\Addons\MythicIOGrabber\res\fonts\LiberationMono-Regular.ttf" justifyH="CENTER" justifyV="MIDDLE" text="H" outline="NORMAL" >
                    <FontHeight val="13" />
                    <Anchors>
                        <Anchor point="TOP" relativeKey="$parent" relativePoint="TOP" y="-20" />
                    </Anchors>
                </FontString>

                <FontString parentKey="Normal" font="Interface\Addons\MythicIOGrabber\res\fonts\LiberationMono-Regular.ttf" justifyH="CENTER" justifyV="MIDDLE" text="N" outline="NORMAL" >
                    <FontHeight val="13" />
                    <Anchors>
                        <Anchor point="RIGHT" relativeKey="$parent.Heroic" relativePoint="LEFT" x="-35" />
                    </Anchors>
                </FontString>

                <FontString parentKey="Mythic" font="Interface\Addons\MythicIOGrabber\res\fonts\LiberationMono-Regular.ttf" justifyH="CENTER" justifyV="MIDDLE" text="M" outline="NORMAL" >
                    <FontHeight val="13" />
                    <Anchors>
                        <Anchor point="LEFT" relativeKey="$parent.Heroic" relativePoint="RIGHT" x="35" />
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
    </Frame>
</Ui>