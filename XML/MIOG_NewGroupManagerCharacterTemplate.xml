<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\..\FrameXML\UI.xsd">
    <Button name="MIOG_NewGroupManagerCharacterTemplate" virtual="true">
        <Size y="20" />

        <KeyValues>
			<KeyValue key="expand" value="true" type="boolean"/>
		</KeyValues>

		<HighlightTexture parentKey="HighlightTexture" atlas="auctionhouse-ui-row-highlight" useAtlasSize="false" alphaMode="ADD" setAllPoints="true" />

        <Layers>
            <Layer level="OVERLAY">
                <FontString parentKey="Index" font="SystemFont_Shadow_Med1" justifyH="CENTER">
                    <Size x="17" />
                    <Anchors>
                        <Anchor point="LEFT" relativeKey="$parent" relativePoint="LEFT" x="2"/>
                    </Anchors>
                </FontString>
            </Layer>

            <Layer level="ARTWORK">
                <Texture parentKey="Role">
                    <Size x="17" y="17"/>
                    
                    <Anchors>
                        <Anchor point="LEFT" relativeKey="$parent.Index" relativePoint="RIGHT" x="2"/>
                    </Anchors>
                </Texture>

                <Texture parentKey="Spec">
                    <Size x="16" y="16"/>
                    
                    <Anchors>
                        <Anchor point="LEFT" relativeKey="$parent.Role" relativePoint="RIGHT" x="4"/>
                    </Anchors>
                </Texture>
            </Layer>

            <Layer level="ARTWORK">
                <Texture parentKey="ReadyBorder">
                    <Size x="17" y="17"/>

                    <Color r="0" g="0" b="0" a="0.75" />
                    
                    <Anchors>
                        <Anchor point="RIGHT" relativeKey="$parent" relativePoint="RIGHT" x="-8"/>
                    </Anchors>
                </Texture>
            </Layer>

            <Layer level="OVERLAY">
                <FontString parentKey="Name" font="SystemFont_Shadow_Med1" justifyH="LEFT">
                    <Size x="126" />
                    <Anchors>
                        <Anchor point="LEFT" relativeKey="$parent.Spec" relativePoint="RIGHT" x="3"/>
                    </Anchors>
                </FontString>

                <FontString parentKey="Itemlevel" font="SystemFont_Shadow_Med1" justifyH="LEFT">
                    <Size x="24" />
                    <Anchors>
                        <Anchor point="LEFT" relativeKey="$parent.Name" relativePoint="RIGHT" x="3"/>
                    </Anchors>
                </FontString>

                <FontString parentKey="Durability" font="SystemFont_Shadow_Med1" justifyH="LEFT">
                    <Size x="40" />
                    <Anchors>
                        <Anchor point="LEFT" relativeKey="$parent.Itemlevel" relativePoint="RIGHT" x="4"/>
                    </Anchors>
                </FontString>

                <FontString parentKey="Score" font="SystemFont_Shadow_Med1" justifyH="LEFT">
                    <Size x="40" />
                    <Anchors>
                        <Anchor point="LEFT" relativeKey="$parent.Durability" relativePoint="RIGHT" x="2"/>
                    </Anchors>
                </FontString>

                <FontString parentKey="Progress" font="SystemFont_Shadow_Med1" justifyH="LEFT">
                    <Size x="128" />
                    <Anchors>
                        <Anchor point="LEFT" relativeKey="$parent.Score" relativePoint="RIGHT" x="3"/>
                    </Anchors>
                </FontString>

                <Texture parentKey="Ready">
                    <Color r="0.2" g="0.2" b="0.2" a="0.75" />
                    
                    <Anchors>
                        <Anchor point="TOPLEFT" relativeKey="$parent.ReadyBorder" relativePoint="TOPLEFT" x="1" y="-1"/>
                        <Anchor point="BOTTOMRIGHT" relativeKey="$parent.ReadyBorder" relativePoint="BOTTOMRIGHT" x="-1" y="1"/>
                    </Anchors>
                </Texture>
            </Layer>
        </Layers> 
        
        <Scripts>
            <OnEnter>
                if(self.data.unitID) then
                    GameTooltip:SetOwner(self, "ANCHOR_RIGHT")
                    GameTooltip:SetUnit(self.data.unitID)
                    GameTooltip:Show()
                end
            </OnEnter>
            <OnLeave function="GameTooltip_Hide" />
        </Scripts>
    </Button>
</Ui>