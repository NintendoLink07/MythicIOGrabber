<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\..\FrameXML\UI.xsd">
    <Frame name="MIOG_FilterManagerSingleClassTemplate" virtual="true">
        <Layers>
            <Layer level="BACKGROUND">
                <Texture parentKey="Border" setAllPoints="true" />
            </Layer>

            <Layer level="BORDER">
                <Texture parentKey="Background">
                    <Anchors>
                        <Anchor point="TOPLEFT" relativeKey="$parent.Border" relativePoint="TOPLEFT" x="1" y="-1" />
                        <Anchor point="BOTTOMRIGHT" relativeKey="$parent.Border" relativePoint="BOTTOMRIGHT" x="-1" y="1" />
                    </Anchors>
                </Texture>
            </Layer>
        </Layers>

        <Frames>
            <Frame parentKey="ClassFrame" inherits="MIOG_FilterManagerSingleIconTemplate">
                <Anchors>
                    <Anchor point="LEFT" relativeKey="$parent" x="1"/>
                </Anchors>
            </Frame>

            <Frame parentKey="Spec1" inherits="MIOG_FilterManagerSingleIconTemplate">
                <Anchors>
                    <Anchor point="LEFT" relativeKey="$parent.ClassFrame" relativePoint="RIGHT" x="1"/>
                </Anchors>
            </Frame>

            <Frame parentKey="Spec2" inherits="MIOG_FilterManagerSingleIconTemplate">
                <Anchors>
                    <Anchor point="LEFT" relativeKey="$parent.Spec1" relativePoint="RIGHT" x="1"/>
                </Anchors>
            </Frame>
        </Frames>
    </Frame>
</Ui>