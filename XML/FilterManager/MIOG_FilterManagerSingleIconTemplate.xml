<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\..\FrameXML\UI.xsd">
    <Frame name="MIOG_FilterManagerSingleIconTemplate" mixin="FilterMixin" virtual="true">        
        <Size x="40" y="20" />

        <Frames>
            <CheckButton parentKey="CheckButton" inherits="MIOG_MinimalCheckButtonTemplate">
                <Size x="20" y="20" />
                <Anchors>
                    <Anchor point="LEFT" relativeKey="$parent" relativePoint="LEFT" />
                </Anchors>
            </CheckButton>
        </Frames>
        
        <Layers>
            <Layer level="ARTWORK">
                <Texture parentKey="Icon">
                    <Size x="16" y="16" />
                    <Anchors>
                        <Anchor point="LEFT" relativeKey="$parent.Button" relativePoint="RIGHT" />
                    </Anchors>

                    <Scripts>
                        <OnLeave function="GameTooltip_Hide" />
                    </Scripts>
                </Texture>
            </Layer>
        </Layers>
    </Frame>
</Ui>