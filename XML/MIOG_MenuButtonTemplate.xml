<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\..\FrameXML\UI.xsd">
    <Button name="MIOG_MenuButtonTemplate" inherits="BackdropTemplate, UIButtonTemplate" virtual="true">
        <Layers>
            <Layer level="OVERLAY">
                <FontString parentKey="Title" font="LibMono" justifyH="CENTER" justifyV="MIDDLE" outline="NORMAL" text="HERE GOES YOUR TITLE">
                    <FontHeight val="12"/>
                    <Anchors>
                        <Anchor point="CENTER" relativeKey="$parent" relativePoint="CENTER"/>
                    </Anchors>
                </FontString>
            </Layer>

            <Layer level="BACKGROUND">
                <Texture parentKey="BackgroundImage">
                    <Anchors>
                        <Anchor point="TOPLEFT" relativeKey="$parent" relativePoint="TOPLEFT" />
                        <Anchor point="BOTTOMRIGHT" relativeKey="$parent" relativePoint="BOTTOMRIGHT" />
                    </Anchors>
                </Texture>
            </Layer>
        </Layers>

        <Frames>
            <Button parentKey="StartGroup">
                <Size x="21" y="21" />
                <Anchors>
                    <Anchor point="LEFT" relativeKey="$parent" relativePoint="LEFT" x="5"/>
                </Anchors>

                <Layers>
                    <Layer level="ARTWORK">
                        <Texture parentKey="Icon" atlas="tradeskills-icon-add" setAllPoints="true">

                        </Texture>
                    </Layer>
                </Layers>
            </Button>

            <Button parentKey="FindGroup">
                <Size x="21" y="21" />
                <Anchors>
                    <Anchor point="RIGHT" relativeKey="$parent" relativePoint="RIGHT" x="-5"/>
                </Anchors>
                
                <Layers>
                    <Layer level="ARTWORK">
                        <Texture parentKey="Icon" atlas="uitools-icon-search" setAllPoints="true">

                        </Texture>
                    </Layer>
                </Layers>
            </Button>
        </Frames>

        --UI-CharacterCreate-LargeButton-Yellow-Highlight   yellow round x+3-3 y+1-1
        --communities-create-button-highlight               blue rounded x+5-5 y+1-1
        --communitiesfinder_card_highlight                  blue
        --groupfinder-highlightbar-green
        --BattleBar-SwapPetFrame-Highlight                  yellow
        --auctionhouse-nav-button-highlight
        --auctionhouse-nav-button-secondary-highlight
        --search-highlight
        
        <HighlightTexture atlas="communitiesfinder_card_highlight" />
    </Button>
</Ui>