<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\..\FrameXML\UI.xsd">
    <Frame name="MIOG_NewFilterPanelTextSettingTemplate" mixin="FilterMixin" virtual="true">
        <KeyValues>
            <KeyValue key="expand" value="true" type="boolean" />
        </KeyValues>

        <Size y="20" />

        <Frames>
            <CheckButton parentKey="CheckButton" inherits="MIOG_MinimalCheckButtonTemplate">
                <Size x="20" y="20" />
                <Anchors>
                    <Anchor point="LEFT" relativeKey="$parent" relativePoint="LEFT" />
                </Anchors>
            </CheckButton>
        </Frames>
        
        <Layers>
            <Layer level="OVERLAY">
                <FontString parentKey="Text" font="SystemFont_Shadow_Med1" justifyH="LEFT" justifyV="MIDDLE" outline="NORMAL">
                    <Anchors>
                        <Anchor point="LEFT" relativeKey="$parent.Button" relativePoint="RIGHT" x="2"/>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
    </Frame>
</Ui>