<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\..\FrameXML\UI.xsd">
    <Frame name="MIOG_ClassPanelClassFrameTemplate" virtual="true">
        <Layers>            
            <Layer level="BORDER">
                <Texture parentKey="Border" setAllPoints="true" />
            </Layer>
            
            <Layer level="ARTWORK">
                <Texture parentKey="Icon" enableMouseClicks="true">
                    <Anchors>
                        <Anchor point="TOPLEFT" relativeKey="$parent.Border" relativePoint="TOPLEFT" x="1" y="-1" />
                        <Anchor point="BOTTOMRIGHT" relativeKey="$parent.Border" relativePoint="BOTTOMRIGHT" x="-1" y="1" />
                    </Anchors>
                </Texture>
            </Layer>


            <Layer level="OVERLAY">
                <FontString parentKey="FontString" font="SystemFont_Shadow_Med3_Outline" justifyH="CENTER" justifyV="MIDDLE" outline="NORMAL" text="0" wordwrap="false">
                    <Anchors>
                        <Anchor point="CENTER" relativeKey="$parent.Icon" relativePoint="CENTER" />
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
    </Frame>
</Ui>