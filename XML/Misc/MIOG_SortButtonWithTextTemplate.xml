<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\..\FrameXML\UI.xsd">
    <Frame name="MIOG_SortButtonWithTextTemplate" virtual="true">
        <Frames>
            <Button parentKey="Button" inherits="MIOG_SortButtonTemplate">
                <Size x="15" y="15" />
                
                <Anchors>
                    <Anchor point="LEFT" relativeKey="$parent" relativePoint="LEFT"/>
                </Anchors>
            </Button>
        </Frames>

        <Layers>
            <Layer level="OVERLAY">
                <FontString parentKey="Name" font="SystemFont_Shadow_Small" justifyH="LEFT" justifyV="MIDDLE" outline="NORMAL" text="">
                    <Anchors>
                        <Anchor point="LEFT" relativeKey="$parent.Button" relativePoint="RIGHT" x="3"/>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
    </Frame>
</Ui>