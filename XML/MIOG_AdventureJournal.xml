<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\..\FrameXML\UI.xsd">
    <Frame name="MIOG_AdventureJournal" inherits="BackdropTemplate" virtual="true">
        <Frames>
            <Frame parentKey="InstanceDropdown" inherits="MIOG_DropDownMenu" mixin="SlickDropDown">
                <Size x="260" y="22" />
                <Anchors>
                    <Anchor point="TOPLEFT" relativeKey="$parent" relativePoint="TOPLEFT" />
                </Anchors>
            </Frame>
            
            <Frame parentKey="BossDropdown" inherits="MIOG_DropDownMenu" mixin="SlickDropDown">
                <Size x="260" y="22" />
                <Anchors>
                    <Anchor point="TOPLEFT" relativeKey="$parent.InstanceDropdown" relativePoint="BOTTOMLEFT"/>
                </Anchors>
            </Frame>
            
            <Frame parentKey="KeylevelDropdown" inherits="MIOG_DropDownMenu" mixin="SlickDropDown" hidden="true">
                <Size x="44" y="22" />
                <Anchors>
                    <Anchor point="TOPLEFT" relativeKey="$parent.InstanceDropdown" relativePoint="TOPRIGHT"/>
                </Anchors>
            </Frame>

            <Button parentKey="Model" inherits="UIPanelButtonTemplate" text="M">
                <Size x="20" y="20" />
                <Anchors>
                    <Anchor point="TOPRIGHT" relativeKey="$parent" relativePoint="TOPRIGHT"/>
                </Anchors>
            </Button>

            <Button parentKey="Loot" inherits="UIPanelButtonTemplate" text="L">
                <Size x="20" y="20" />
                <Anchors>
                    <Anchor point="RIGHT" relativeKey="$parent.Model" relativePoint="LEFT"/>
                </Anchors>
                <Scripts>
                    <OnClick>
                        self:GetParent().AbilitiesFrame:Hide()
                        self:GetParent().LootFrame:Show()
                    </OnClick>
                </Scripts>
            </Button>

            <Button parentKey="Abilities" inherits="UIPanelButtonTemplate" text="A">
                <Size x="20" y="20" />
                <Anchors>
                    <Anchor point="RIGHT" relativeKey="$parent.Loot" relativePoint="LEFT"/>
                </Anchors>
                <Scripts>
                    <OnClick>
                        self:GetParent().LootFrame:Hide()
                        self:GetParent().AbilitiesFrame:Show()
                    </OnClick>
                </Scripts>
            </Button>

            <Frame parentKey="SettingsBar">
                <Size x="260" y="20" />

                <Anchors>
                    <Anchor point="TOPLEFT" relativeKey="$parent.BossDropdown" relativePoint="BOTTOMLEFT"/>
                </Anchors>

                <Frames>
                    <Frame parentKey="ClassSpecDropdown" inherits="MIOG_DropDownMenu" mixin="SlickDropDown">
                        <Size x="140" y="20" />
                        <Anchors>
                            <Anchor point="LEFT" relativeKey="$parent" relativePoint="LEFT"/>
                        </Anchors>
                    </Frame>

                    <Frame parentKey="SlotDropdown" inherits="MIOG_DropDownMenu" mixin="SlickDropDown">
                        <Size x="120" y="20" />
                        <Anchors>
                            <Anchor point="LEFT" relativeKey="$parent.ClassSpecDropdown" relativePoint="RIGHT"/>
                        </Anchors>
                    </Frame>
                </Frames>
            </Frame>
                                        
            <ScrollFrame parentKey="AbilitiesFrame" inherits="ScrollFrameTemplate">
                <KeyValues>
                    <KeyValue key="scrollBarHideIfUnscrollable" value="true" type="string" />
                </KeyValues>

                <Anchors>
                    <Anchor point="TOPLEFT" relativeKey="$parent.SettingsBar" relativePoint="BOTTOMLEFT"/>
                    <Anchor point="BOTTOMRIGHT" relativeKey="$parent" relativePoint="BOTTOMRIGHT" />
                </Anchors>

                <ScrollChild>
                    <Frame parentKey="Container" inherits="VerticalLayoutFrame, BackdropTemplate" setAllPoints="true">
                        <KeyValues>
                            <KeyValue key="align" value="top" />
                            <KeyValue key="spacing" value="4" />
                        </KeyValues>
                    </Frame>
                </ScrollChild>
            </ScrollFrame>

            <ScrollFrame parentKey="LootFrame" inherits="ScrollFrameTemplate" hidden="true">
                <KeyValues>
                    <KeyValue key="scrollBarHideIfUnscrollable" value="true" type="string" />
                </KeyValues>

                <Anchors>
                    <Anchor point="TOPLEFT" relativeKey="$parent.SettingsBar" relativePoint="BOTTOMLEFT"/>
                    <Anchor point="BOTTOMRIGHT" relativeKey="$parent" relativePoint="BOTTOMRIGHT" />
                </Anchors>

                <ScrollChild>
                    <Frame parentKey="Container" inherits="VerticalLayoutFrame, BackdropTemplate" setAllPoints="true">
                        <KeyValues>
                            <KeyValue key="align" value="top" />
                            <KeyValue key="spacing" value="4" />
                        </KeyValues>
                    </Frame>
                </ScrollChild>
            </ScrollFrame>


            <!--<Frame parentKey="SpecificScrollBox" inherits="WowScrollBoxList" frameStrata="HIGH">
                <Anchors>
                    <Anchor point="TOPLEFT" relativeKey="$parent.InstanceDropdown" relativePoint="BOTTOMLEFT"/>
                    <Anchor point="BOTTOMRIGHT" relativeKey="$parent" relativePoint="BOTTOMRIGHT" />
                </Anchors>
            </Frame>
            <EventFrame parentKey="SpecificScrollBar" inherits="MinimalScrollBar" frameStrata="HIGH">
                <Anchors>
                    <Anchor point="TOPLEFT" relativeKey="$parent.SpecificScrollBox" relativePoint="TOPRIGHT"/>
                    <Anchor point="BOTTOMLEFT" relativeKey="$parent.SpecificScrollBox" relativePoint="BOTTOMRIGHT" />
                </Anchors>
            </EventFrame>-->
        </Frames>

        <Layers>
            <Layer level="BACKGROUND" textureSubLevel="1">
                <Texture parentKey="Background" setAllPoints="true" />
            </Layer>

            <Layer level="ARTWORK">
                <Texture parentKey="Status" file="Interface\ChatFrame\ChatFrameBackground">
                    <Size x="20" y="20" />
                    <Anchors>
                        <Anchor point="TOPLEFT" relativeKey="$parent.BossDropdown" relativePoint="TOPRIGHT"/>
                    </Anchors>
                </Texture>
            </Layer>
        </Layers>
    </Frame>
</Ui>