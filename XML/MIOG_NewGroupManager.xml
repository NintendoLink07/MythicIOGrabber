<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\..\FrameXML\UI.xsd">    
    <Frame name="MIOG_NewGroupManager" mixin="SortingMixin" virtual="true">
        <Frames>
            <Frame parentKey="SortButtonRow" inherits="HorizontalLayoutFrame">
                <Size y="20" />
                <Anchors>
                    <Anchor point="TOPLEFT" relativeKey="$parent" relativePoint="TOPLEFT"/>
                    <Anchor point="TOPRIGHT" relativeKey="$parent" relativePoint="TOPRIGHT"/>
                </Anchors>
            </Frame>
            
            <Frame parentKey="StatusBar">
                <Size y="20" />

                <Anchors>
                    <Anchor point="TOPLEFT" relativeKey="$parent" relativePoint="TOPLEFT" />
                    <Anchor point="TOPRIGHT" relativeKey="$parent" relativePoint="TOPRIGHT" />
                </Anchors>

                <Layers>
                    <Layer level="ARTWORK">
                        <Texture parentKey="ReadyBorder">
                            <Size x="16" y="16"/>

                            <Color r="0" g="0" b="0" a="0.75" />
                            
                            <Anchors>
                                <Anchor point="RIGHT" relativeKey="$parent" relativePoint="RIGHT" x="-4"/>
                            </Anchors>
                        </Texture>
                    </Layer>

                    <Layer level="OVERLAY">
                        <Texture parentKey="ReadyBox">
                            <Size x="16" y="16"/>

                            <Color r="0" g="1" b="0" a="1" />
                            
                            <Anchors>
                                <Anchor point="TOPLEFT" relativeKey="$parent.ReadyBorder" relativePoint="TOPLEFT" x="1" y="-1"/>
                                <Anchor point="BOTTOMRIGHT" relativeKey="$parent.ReadyBorder" relativePoint="BOTTOMRIGHT" x="-1" y="1"/>
                            </Anchors>
                        </Texture>

                        <FontString font="SystemFont_Shadow_Med1" justifyH="LEFT" text="Ready status: ">
                            <Size y="18" />
                            <Anchors>
                                <Anchor point="RIGHT" relativeKey="$parent.ReadyBorder" relativePoint="LEFT" x="-4"/>
                            </Anchors>
                        </FontString>
                    </Layer>
                </Layers>

                <Frames>

                </Frames>
            </Frame>

            <!--<Frame parentKey="ScrollBox" inherits="WowScrollBoxList">
                <Anchors>
                    <Anchor point="TOPLEFT" relativeKey="$parent.StatusBar" relativePoint="BOTTOMLEFT"/>
                    <Anchor point="BOTTOMRIGHT" relativeKey="$parent" relativePoint="BOTTOMRIGHT" x="-12"/>
                </Anchors>

            </Frame>

            <EventFrame parentKey="ScrollBar" inherits="MinimalScrollBar">
                <Anchors>
                    <Anchor point="TOPLEFT" relativeKey="$parent.ScrollBox" relativePoint="TOPRIGHT"/>
                    <Anchor point="BOTTOMLEFT" relativeKey="$parent.ScrollBox" relativePoint="BOTTOMRIGHT" />
                </Anchors>
            </EventFrame>!-->

            <ScrollFrame parentKey="ScrollFrame" inherits="BackdropTemplate, ScrollFrameTemplate">
                <KeyValues>
                    <KeyValue key="scrollBarHideIfUnscrollable" value="true" type="string" />
                </KeyValues>

                <Anchors>
                    <Anchor point="TOPLEFT" relativeKey="$parent.StatusBar" relativePoint="BOTTOMLEFT"/>
                    <Anchor point="BOTTOMRIGHT" relativeKey="$parent" relativePoint="BOTTOMRIGHT" x="-12"/>
                </Anchors>

                <ScrollChild>
                    <Frame parentKey="Container" inherits="VerticalLayoutFrame, BackdropTemplate" setAllPoints="true">
                        <KeyValues>
                            <KeyValue key="align" value="top" />
                            <KeyValue key="spacing" value="3" />
                        </KeyValues>
                    </Frame>
                </ScrollChild>
            </ScrollFrame>
        </Frames>
    </Frame>
</Ui>