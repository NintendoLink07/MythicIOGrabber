<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\..\FrameXML\UI.xsd">
    <Frame name="MIOG_GearingTable" virtual="true">
        <Frames>
            <Frame parentKey="HeaderContainer">
                <Size y="20"/>

                <Anchors>
                    <Anchor point="TOPLEFT"/>
                    <Anchor point="TOPRIGHT"/>
                </Anchors>
            </Frame>

            <Frame parentKey="ScrollBox" inherits="WowScrollBoxList" >
                <Anchors>
                    <Anchor point="TOPLEFT" relativeKey="$parent.HeaderContainer" relativePoint="BOTTOMLEFT"/>
                    <Anchor point="BOTTOMRIGHT" relativeKey="$parent" relativePoint="BOTTOMRIGHT"/>
                </Anchors>
            </Frame>

            <EventFrame parentKey="ScrollBar" inherits="MinimalScrollBar">
                <Size x="16" />
                <Anchors>
                    <Anchor point="TOPLEFT" relativeKey="$parent.ScrollBox" relativePoint="TOPRIGHT"/>
                    <Anchor point="BOTTOMLEFT" relativeKey="$parent.ScrollBox" relativePoint="BOTTOMRIGHT"/>
                </Anchors>

            </EventFrame>

            <Frame parentKey="Legend" frameStrata="HIGH">
                <Size x="180" y="25" />
                <Anchors>
                    <Anchor point="BOTTOMRIGHT" relativeKey="$parent" relativePoint="BOTTOMRIGHT" />
                </Anchors>

                <Layers>
                    <Layer level="ARTWORK">
                        <Texture parentKey="Track1" inherits="MIOG_GearingTableLegendTextureTemplate">
                            <Anchors>
                                <Anchor point="LEFT" relativeKey="$parent" relativePoint="LEFT" />
                            </Anchors>
                        </Texture>

                        <Texture parentKey="Track2" inherits="MIOG_GearingTableLegendTextureTemplate">
                            <Anchors>
                                <Anchor point="LEFT" relativeKey="$parent.Track1" relativePoint="RIGHT" x="5"/>
                            </Anchors>
                        </Texture>

                        <Texture parentKey="Track3" inherits="MIOG_GearingTableLegendTextureTemplate">
                            <Anchors>
                                <Anchor point="LEFT" relativeKey="$parent.Track2" relativePoint="RIGHT" x="5"/>
                            </Anchors>
                        </Texture>

                        <Texture parentKey="Track4" inherits="MIOG_GearingTableLegendTextureTemplate">
                            <Anchors>
                                <Anchor point="LEFT" relativeKey="$parent.Track3" relativePoint="RIGHT" x="5"/>
                            </Anchors>
                        </Texture>

                        <Texture parentKey="Track5" inherits="MIOG_GearingTableLegendTextureTemplate">
                            <Anchors>
                                <Anchor point="LEFT" relativeKey="$parent.Track4" relativePoint="RIGHT" x="5"/>
                            </Anchors>
                        </Texture>

                        <Texture parentKey="Track6" inherits="MIOG_GearingTableLegendTextureTemplate">
                            <Anchors>
                                <Anchor point="LEFT" relativeKey="$parent.Track5" relativePoint="RIGHT" x="5"/>
                            </Anchors>
                        </Texture>
                    </Layer>
                </Layers>
            </Frame>
        </Frames>

        <Layers>
            <Layer level="OVERLAY">
                <FontString parentKey="TestFontString" font="GameFontHighlight" justifyH="CENTER" justifyV="MIDDLE" hidden="true">
                    <Anchors>
                        <Anchor point="CENTER"/>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
    </Frame>
</Ui>