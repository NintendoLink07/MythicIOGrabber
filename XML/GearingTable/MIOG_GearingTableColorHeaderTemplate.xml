<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\..\FrameXML\UI.xsd">
    <Frame name="MIOG_GearingTableColorHeaderTemplate" mixin="GearingTableHeaderMixin" virtual="true">        
        <Size y="20" />
        
        <KeyValues>
            <Keyvalue key="expand" value="true" type="boolean" />
        </KeyValues>

        <Layers>
            <Layer level="BACKGROUND">
                <Texture parentKey="BackgroundColor" setAllPoints="true">
                    <Color r="1" g="1" b="1" a="0.3" />

                </Texture>
            </Layer>

            <Layer level="OVERLAY">
                <FontString parentKey="Text" font="GameFontHighlight" justifyH="CENTER" justifyV="MIDDLE" outline="NORMAL">
                    <Anchors>
                        <Anchor point="CENTER"/>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
        
        <Frames>
            <CheckButton parentKey="Checkbox" inherits="MIOG_MinimalCheckButtonTemplate" checked="true">
                <Size x="14" y="14" />
                <Anchors>
                    <Anchor point="RIGHT" relativeKey="$parent.Text" relativePoint="LEFT" x="-1"/>
                </Anchors>
            </CheckButton>
        </Frames>


        <Scripts>
            <OnLeave function="GameTooltip_Hide" />
        </Scripts>
    </Frame>
</Ui>