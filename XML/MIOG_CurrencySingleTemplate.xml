<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\..\FrameXML\UI.xsd">
    <Frame name="MIOG_CurrencySingleTemplate" inherits="ResizeLayoutFrame" virtual="true">
        <KeyValues>
            <KeyValue key="leftPadding" value="4" type="number" />
        </KeyValues>

        <Layers>
            <Layer level="ARTWORK">
                <Texture parentKey="Icon">
                    <KeyValues>
                        <KeyValue key="layoutIndex" value="1" type="number" />
                    </KeyValues>

                    <Size x="12" y="12" />
                    <Anchors>
                        <Anchor point="LEFT" relativeKey="$parent" relativePoint="LEFT" />
                    </Anchors>

                    <Scripts>
                        <OnLeave>
                            GameTooltip:Hide()
                        </OnLeave>
                    </Scripts>
                </Texture>
            </Layer>
            
            <Layer level="OVERLAY">
                <FontString parentKey="Text" font="SystemFont_Shadow_Med1" justifyH="LEFT" justifyV="MIDDLE" outline="NORMAL" text="0/0">
                    <KeyValues>
                        <KeyValue key="layoutIndex" value="2" type="number" />
                    </KeyValues>

                    <Anchors>
                        <Anchor point="LEFT" relativeKey="$parent.Icon" relativePoint="RIGHT" x="2"/>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
    </Frame>
</Ui>