<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\..\FrameXML\UI.xsd">
    <Frame name="MIOG_LootLineTemplate" inherits="BackdropTemplate" mixin="LootLineMixin" virtual="true">
        <Layers>
            <Layer level="BACKGROUND">
                <Texture inherits="UI-PaperOverlay-AbilityTextBG" parentKey="Background" setAllPoints="true" />
            </Layer>

            <Layer level="OVERLAY">
                <Texture parentKey="Expand" atlas="campaign_headericon_closed" hidden="true">
                    <Size x="18" y="18" />
                    <Anchors>
                        <Anchor point="LEFT" x="2"/>
                    </Anchors>
                </Texture>
            </Layer>

            <Layer level="ARTWORK">
                <Texture parentKey="Icon">
                    <Size x="20" y="20" />
                    <Anchors>
                        <Anchor point="LEFT" x="2"/>
                    </Anchors>
                </Texture>
            </Layer>

            <Layer>
                <FontString parentKey="Name" font="GameFontHighlight" justifyH="LEFT">
                    <Anchors>
                        <Anchor point="LEFT" relativeKey="$parent.Icon" relativePoint="RIGHT" x="3"/>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>

        <Scripts>
            <OnMouseDown method="OnMouseDown" />
            <OnLoad method="OnLoad" />
        </Scripts>
    </Frame>
</Ui>