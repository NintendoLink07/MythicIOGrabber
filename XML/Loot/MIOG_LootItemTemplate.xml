<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\..\FrameXML\UI.xsd">
    <Frame name="MIOG_LootItemTemplate" inherits="MIOG_LootLineTemplate" mixin="LootItemMixin" virtual="true">
        <Size y="23" />

        <Layers>
            <Layer>
                <FontString parentKey="Itemlevel" font="GameFontHighlight" justifyH="LEFT">
                    <Anchors>
                        <Anchor point="LEFT" relativeKey="$parent.Icon" relativePoint="RIGHT" x="2"/>
                    </Anchors>
                </FontString>

                <FontString parentKey="Type" font="GameFontHighlight" justifyH="LEFT">
                    <Anchors>
                        <Anchor point="RIGHT" x="-2"/>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>

        <Scripts>
            <OnEnter method="OnEnter" />
            <OnLeave function="GameTooltip_Hide" />
        </Scripts>
    </Frame>
</Ui>