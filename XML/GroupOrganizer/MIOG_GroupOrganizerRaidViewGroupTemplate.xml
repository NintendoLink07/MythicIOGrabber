<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\..\FrameXML\UI.xsd">
    <Frame name="MIOG_GroupOrganizerRaidViewGroupTemplate" inherits="BackdropTemplate, VerticalLayoutFrame" frameStrata="MEDIUM" virtual="true">
        <KeyValues>
            <KeyValue key="fixedWidth" value="136" type="number" />
            <KeyValue key="fixedHeight" value="180" type="number" />
            <KeyValue key="topPadding" value="20" type="number" />
        </KeyValues>

        <Layers>
            <Layer level="BACKGROUND">
                <Texture parentKey="HeaderColor">
                    <Size y="20" />
                    <Anchors>
                        <Anchor point="TOPLEFT"/>
                        <Anchor point="TOPRIGHT"/>
                    </Anchors>
                </Texture>

                <Texture parentKey="Space1Color">
                    <Size y="30" />
                    <Anchors>
                        <Anchor point="TOPLEFT" relativeKey="$parent.HeaderColor" relativePoint="BOTTOMLEFT" y="-1"/>
                        <Anchor point="TOPRIGHT" relativeKey="$parent.HeaderColor" relativePoint="BOTTOMRIGHT" y="-1"/>
                    </Anchors>
                </Texture>

                <Texture parentKey="Space2Color">
                    <Size y="30" />
                    <Anchors>
                        <Anchor point="TOPLEFT" relativeKey="$parent.Space1Color" relativePoint="BOTTOMLEFT" y="-2"/>
                        <Anchor point="TOPRIGHT" relativeKey="$parent.Space1Color" relativePoint="BOTTOMRIGHT" y="-2"/>
                    </Anchors>
                </Texture>

                <Texture parentKey="Space3Color">
                    <Size y="30" />
                    <Anchors>
                        <Anchor point="TOPLEFT" relativeKey="$parent.Space2Color" relativePoint="BOTTOMLEFT" y="-2"/>
                        <Anchor point="TOPRIGHT" relativeKey="$parent.Space2Color" relativePoint="BOTTOMRIGHT" y="-2"/>
                    </Anchors>
                </Texture>

                <Texture parentKey="Space4Color">
                    <Size y="30" />
                    <Anchors>
                        <Anchor point="TOPLEFT" relativeKey="$parent.Space3Color" relativePoint="BOTTOMLEFT" y="-2"/>
                        <Anchor point="TOPRIGHT" relativeKey="$parent.Space3Color" relativePoint="BOTTOMRIGHT" y="-2"/>
                    </Anchors>
                </Texture>

                <Texture parentKey="Space5Color">
                    <Size y="30" />
                    <Anchors>
                        <Anchor point="TOPLEFT" relativeKey="$parent.Space4Color" relativePoint="BOTTOMLEFT" y="-2"/>
                        <Anchor point="TOPRIGHT" relativeKey="$parent.Space4Color" relativePoint="BOTTOMRIGHT" y="-2"/>
                    </Anchors>
                </Texture>
            </Layer>

            <Layer level="OVERLAY">
                <FontString parentKey="Title" font="GameFontHighlight" text="Group">
                    <Anchors>
                        <Anchor point="CENTER" relativeKey="$parent.HeaderColor"/>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
        
        <Scripts>
            <OnLoad>
                self:SetBackdrop({
                    bgFile="Interface\\ChatFrame\\ChatFrameBackground",
                    tileSize=1,
                    tile=true,
                    edgeFile="Interface\\ChatFrame\\ChatFrameBackground",
                    edgeSize = 1,
                })
                self:SetBackdropColor(0, 0, 0, 0)
                self:SetBackdropBorderColor(0, 0, 0, 1)
            </OnLoad>
        </Scripts>
    </Frame>
</Ui>