<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\..\FrameXML\UI.xsd">
    <Button name="MIOG_GroupOrganizerRaidViewMemberFrameTemplate" movable="true" registerForClicks="LeftButtonDown, RightButtonUp" inherits="UIButtonTemplate, BackdropTemplate, MIOG_UnitTemplate" mixin="RaidViewButtonMixin" hidden="true" virtual="true" flattenRenderLayers="true">
        <Size y="30" />
        
        <HighlightTexture file="Interface/Addons/MythicIOGrabber/res/misc/highlight1.png" setAllPoints="true" />

        <KeyValues>
            <KeyValue key="expand" value="true" type="boolean" />
			<KeyValue key="leftPadding" value="1" type="number"/>
			<KeyValue key="rightPadding" value="1" type="number"/>
			<KeyValue key="topPadding" value="1" type="number"/>
			<KeyValue key="bottomPadding" value="1" type="number"/>
        </KeyValues>

        <Layers>
            <Layer level="BACKGROUND">
                <Texture parentKey="BackgroundColor" setAllPoints="true" />
            </Layer>
            
            <Layer level="ARTWORK">
                <Texture parentKey="Status">
                    <Size x="12" y="12" />
                    <Anchors>
                        <Anchor point="LEFT" relativeKey="$parent" relativePoint="LEFT" x="1"/>
                    </Anchors>
                </Texture>

                <Texture parentKey="Spec">
                    <Size x="14" y="14" />
                    <Anchors>
                        <Anchor point="LEFT" relativeKey="$parent.Status" relativePoint="RIGHT"/>
                    </Anchors>
                </Texture>

                <Texture parentKey="Rank">
                    <Size x="12" y="12" />
                    <Anchors>
                        <Anchor point="RIGHT" x="-2"/>
                    </Anchors>
                </Texture>

                <Texture parentKey="Role">
                    <Size x="12" y="12" />
                    <Anchors>
                        <Anchor point="RIGHT" relativeKey="$parent.Rank" relativePoint="LEFT" x="-1"/>
                    </Anchors>
                </Texture>
            </Layer>
            
            <Layer level="OVERLAY">
                <FontString parentKey="Text" font="GameFontHighlight" justifyH="CENTER" justifyV="MIDDLE" outline="NORMAL" text="">
                    <Anchors>
                        <Anchor point="LEFT" relativeKey="$parent.Spec" relativePoint="RIGHT" x="3"/>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>

        <Scripts>
            <OnMouseDown>
                if(button == "LeftButton") then
                    self:AttemptToMove()

                end

            </OnMouseDown>

            <OnMouseUp>
                if(button == "LeftButton") then
                    self:StopMoving()


                end

            </OnMouseUp>
            <OnLoad>
                self:SetBackdrop({
                    bgFile="Interface\\ChatFrame\\ChatFrameBackground",
                    tileSize=0,
                    tile=false,
                    edgeFile="Interface\\ChatFrame\\ChatFrameBackground",
                    edgeSize = 1,
                })
                self:SetBackdropColor(0, 0, 0, 0)
                self:SetBackdropBorderColor(0, 0, 0, 1)
            </OnLoad>
        </Scripts>
    </Button>
</Ui>