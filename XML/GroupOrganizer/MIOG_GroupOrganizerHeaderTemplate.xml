<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\..\FrameXML\UI.xsd">
    <Button name="MIOG_GroupOrganizerHeaderTemplate" mixin="GroupOrganizerHeaderMixin" virtual="true">
        <Layers>
            <Layer level="BACKGROUND">
                <Texture parentKey="BackgroundColor" setAllPoints="true" />
            </Layer>

            <Layer level="OVERLAY">
                <FontString parentKey="Text" font="GameFontHighlight" justifyH="CENTER" justifyV="MIDDLE" outline="NORMAL">
                    <Anchors>
                        <Anchor point="CENTER"/>
                    </Anchors>
                </FontString>
            </Layer>

            <Layer level="ARTWORK">
                <Texture parentKey="SortArrow" atlas="auctionhouse-ui-sortarrow" hidden="true">
                    <Size x="8" y="8" />
                    <Anchors>
                        <Anchor point="LEFT" relativeKey="$parent.Text" relativePoint="RIGHT"/>
                    </Anchors>
                </Texture>
            </Layer>
        </Layers>
        
        <Scripts>
            <OnLoad>
                self.BackgroundColor:SetColorTexture(1, 1, 1, 0.1)
               
            </OnLoad>
            <OnLeave function="GameTooltip_Hide" />
        </Scripts>
    </Button>
</Ui>