    <Frame name="MIOG_GroupOrganizer" virtual="true">
        <Frames>
            <Frame parentKey="Settings">
                <Size y="28"/>

                <Anchors>
                    <Anchor point="TOPLEFT" x="1"/>
                    <Anchor point="TOPRIGHT"/>
                </Anchors>

                <Frames>
                    <Button parentKey="Refresh" inherits="BigRedRefreshButtonTemplate">
                        <Size x="20" y="20" />
                        <Anchors>
                            <Anchor point="LEFT" relativeKey="$parent" x="4"/>
                        </Anchors>

                        <Scripts>
                            <OnEnter>
                                GameTooltip:SetOwner(self, "ANCHOR_RIGHT")
                                GameTooltip:SetText("Refresh player data.")
                                GameTooltip:Show()
                            </OnEnter>

                            <OnLeave function="GameTooltip_Hide" />
                        </Scripts>
                    </Button>

                    <Button parentKey="ListViewButton" inherits="UIPanelButtonTemplate" text="List">
                        <Anchors>
                            <Anchor point="LEFT" relativeKey="$parent.Refresh" relativePoint="RIGHT" x="4"/>
                        </Anchors>

                        <Scripts>
                            <OnClick>
                                self:GetParent():GetParent().RaidView:Hide()
                                self:GetParent():GetParent().ListView:Show()
                            </OnClick>
                        </Scripts>
                    </Button>

                    <Button parentKey="RaidViewButton" inherits="UIPanelButtonTemplate" text="Raid">
                        <Anchors>
                            <Anchor point="LEFT" relativeKey="$parent.ListViewButton" relativePoint="RIGHT" x="4"/>
                        </Anchors>

                        <Scripts>
                            <OnClick>
                                self:GetParent():GetParent().ListView:Hide()
                                self:GetParent():GetParent().RaidView:Show()
                            </OnClick>
                        </Scripts>
                    </Button>
                </Frames>

                <Layers>
                    <Layer level="OVERLAY">
                        <FontString parentKey="NextRefreshString" font="GameFontHighlight" justifyH="CENTER" justifyV="MIDDLE" outline="NORMAL">
                            <Anchors>
                                <Anchor point="RIGHT"/>
                            </Anchors>
                        </FontString>
                    </Layer>
                </Layers>
            </Frame>

            <Frame parentKey="RaidView" mixin="RaidViewMixin" hidden="true">
                <Anchors>
                    <Anchor point="TOPLEFT" relativeKey="$parent.Settings" relativePoint="BOTTOMLEFT" />
                    <Anchor point="BOTTOMRIGHT" relativeKey="$parent" relativePoint="BOTTOMRIGHT"/>
                </Anchors>

                <Frames>
                    <Frame parentKey="Blocker" setAllPoints="true" hidden="true" frameStrata="HIGH" >
                        <Layers>
                            <Layer level="OVERLAY" textureSubLevel="7">
                                <Texture setAllPoints="true">
                                    <Color r="0.1" g="0.1" b="0.1" a="0.8" />
                                </Texture>
                            </Layer>
                        </Layers>

                        <Frames>
                            <Frame parentKey="LoadingSpinner" inherits="LoadingSpinnerTemplate">
                                <Size x="64" y="64" />
                                <Anchors>
                                    <Anchor point="CENTER"/>
                                </Anchors>
                            </Frame>
                        </Frames>
                    </Frame>

