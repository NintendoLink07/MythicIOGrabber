						self:GetParent().InfoPanel.Main:SetText(raidData and raidData.main or "")

                        PlaySound(SOUNDKIT.IG_MAINMENU_OPTION)
                        self:GetParent().MythicPlusPanel:Hide()
                        self:GetParent().RaidPanel:Show()

                    </OnClick>
                </Scripts>
            </Button>

