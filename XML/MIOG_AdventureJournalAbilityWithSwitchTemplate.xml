<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\..\FrameXML\UI.xsd">    
    <Frame name="MIOG_AdventureJournalAbilityWithSwitchTemplate" inherits="ResizeLayoutFrame" virtual="true">
        <KeyValues>
			<KeyValue key="fixedWidth" value="330" type="number"/>
			<KeyValue key="minimumHeight" value="20" type="number"/>
		</KeyValues>

        <Anchors>
            <Anchor point="TOPLEFT" relativeKey="$parent" relativePoint="TOPLEFT"/>
        </Anchors>

        <Frames>
            <Button parentKey="ExpandFrame" inherits="UIButtonTemplate" mixin="MultiStateButtonMixin">
                <Size x="20" y="20" />
                <Anchors>
                    <Anchor point="TOPLEFT" relativeKey="$parent" relativePoint="TOPLEFT" x="5" y="-2"/>
                </Anchors>
                <Scripts>
                    <OnLoad>
                        self:OnLoad()
                        self:SetMaxStates(2)
                        self:SetTexturesForBaseState("UI-HUD-ActionBar-PageDownArrow-Up", "UI-HUD-ActionBar-PageDownArrow-Down", "UI-HUD-ActionBar-PageDownArrow-Mouseover", "UI-HUD-ActionBar-PageDownArrow-Disabled")
                        self:SetTexturesForState1("UI-HUD-ActionBar-PageUpArrow-Up", "UI-HUD-ActionBar-PageUpArrow-Down", "UI-HUD-ActionBar-PageUpArrow-Mouseover", "UI-HUD-ActionBar-PageUpArrow-Disabled")
                        self:SetState(false)
                    </OnLoad>
                    <OnClick>
					    PlaySound(SOUNDKIT.IG_MAINMENU_OPTION_CHECKBOX_ON)
					    self:AdvanceState()
                        self:GetParent().DetailedInformation:SetShown(not self:GetParent().DetailedInformation:IsShown())
                        self:GetParent():MarkDirty()
                    </OnClick>
                </Scripts>
            </Button>
        </Frames>

        <Layers>
            <Layer level="ARTWORK">
                <Texture parentKey="Icon">
                    <Size x="16" y="16" />
                    <Anchors>
                        <Anchor point="LEFT" relativeKey="$parent.ExpandFrame" relativePoint="RIGHT" />
                    </Anchors>
                </Texture>
            </Layer>

            <Layer level="OVERLAY">
                <FontString parentKey="Name" font="LibMono" justifyH="CENTER" justifyV="MIDDLE" outline="NORMAL" text="AbilityName">
                    <Anchors>
                        <Anchor point="LEFT" relativeKey="$parent.Icon" relativePoint="RIGHT" />
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>

        <Frames>
            <Frame parentKey="SwitchPanel">
                <Size x="100" y="20"/>
                <Anchors>
                    <Anchor point="LEFT" relativeKey="$parent.Name" relativePoint="RIGHT"/>
                </Anchors>

                <Frames>
                    <Button parentKey="Switch1" inherits="UIPanelButtonTemplate">
                        <Size x="20" y="20" />
                        <Anchors>
                            <Anchor point="LEFT" relativeKey="$parent" relativePoint="LEFT"/>
                        </Anchors>
                        <Scripts>
                            <OnClick>
                                local detailedInformation = self:GetParent():GetParent().DetailedInformation
                                detailedInformation.Base:Hide()
                                detailedInformation.Difficulty1:Show()
                                detailedInformation.Difficulty2:Hide()
                                detailedInformation.Difficulty3:Hide()
                                detailedInformation.Difficulty4:Hide()

                                detailedInformation:MarkDirty()
                            </OnClick>
                        </Scripts>
                    </Button>

                    <Button parentKey="Switch2" inherits="UIPanelButtonTemplate">
                        <Size x="20" y="20" />
                        <Anchors>
                            <Anchor point="LEFT" relativeKey="$parent.Switch1" relativePoint="RIGHT"/>
                        </Anchors>
                        <Scripts>
                            <OnClick>
                                local detailedInformation = self:GetParent():GetParent().DetailedInformation
                                detailedInformation.Base:Hide()
                                detailedInformation.Difficulty1:Hide()
                                detailedInformation.Difficulty2:Show()
                                detailedInformation.Difficulty3:Hide()
                                detailedInformation.Difficulty4:Hide()

                                detailedInformation:MarkDirty()
                            </OnClick>
                        </Scripts>
                    </Button>

                    <Button parentKey="Switch3" inherits="UIPanelButtonTemplate">
                        <Size x="20" y="20" />
                        <Anchors>
                            <Anchor point="LEFT" relativeKey="$parent.Switch2" relativePoint="RIGHT"/>
                        </Anchors>
                        <Scripts>
                            <OnClick>
                                local detailedInformation = self:GetParent():GetParent().DetailedInformation
                                detailedInformation.Base:Hide()
                                detailedInformation.Difficulty1:Hide()
                                detailedInformation.Difficulty2:Hide()
                                detailedInformation.Difficulty3:Show()
                                detailedInformation.Difficulty4:Hide()

                                detailedInformation:MarkDirty()
                            </OnClick>
                        </Scripts>
                    </Button>

                    <Button parentKey="Switch4" inherits="UIPanelButtonTemplate">
                        <Size x="20" y="20" />
                        <Anchors>
                            <Anchor point="LEFT" relativeKey="$parent.Switch3" relativePoint="RIGHT"/>
                        </Anchors>
                        <Scripts>
                            <OnClick>
                                local detailedInformation = self:GetParent():GetParent().DetailedInformation
                                detailedInformation.Base:Hide()
                                detailedInformation.Difficulty1:Hide()
                                detailedInformation.Difficulty2:Hide()
                                detailedInformation.Difficulty3:Hide()
                                detailedInformation.Difficulty4:Show()

                                detailedInformation:MarkDirty()
                            </OnClick>
                        </Scripts>
                    </Button>
                </Frames>
            </Frame>

            <Frame parentKey="DetailedInformation" inherits="ResizeLayoutFrame" hidden="true">
                <Anchors>
                    <Anchor point="BOTTOMLEFT" relativeKey="$parent" relativePoint="BOTTOMLEFT" y="-5" />
                    <Anchor point="BOTTOMRIGHT" relativeKey="$parent" relativePoint="BOTTOMRIGHT" y="-5" />
                </Anchors>

                <Frames>
                    <Frame parentKey="Base" inherits="MIOG_AdventureJournalAbilityDifficultyTemplate" hidden="true">
                        <Anchors>
                            <Anchor point="TOPLEFT" relativeKey="$parent" relativePoint="TOPLEFT" />
                            <Anchor point="TOPRIGHT" relativeKey="$parent" relativePoint="TOPRIGHT" />
                        </Anchors>
                    </Frame>

                    <Frame parentKey="Difficulty1" inherits="MIOG_AdventureJournalAbilityDifficultyTemplate">
                        <Anchors>
                            <Anchor point="TOPLEFT" relativeKey="$parent" relativePoint="TOPLEFT" />
                            <Anchor point="TOPRIGHT" relativeKey="$parent" relativePoint="TOPRIGHT" />
                        </Anchors>
                    </Frame>

                    <Frame parentKey="Difficulty2" inherits="MIOG_AdventureJournalAbilityDifficultyTemplate" hidden="true">
                        <Anchors>
                            <Anchor point="TOPLEFT" relativeKey="$parent" relativePoint="TOPLEFT" />
                            <Anchor point="TOPRIGHT" relativeKey="$parent" relativePoint="TOPRIGHT" />
                        </Anchors>
                    </Frame>

                    <Frame parentKey="Difficulty3" inherits="MIOG_AdventureJournalAbilityDifficultyTemplate" hidden="true">
                        <Anchors>
                            <Anchor point="TOPLEFT" relativeKey="$parent" relativePoint="TOPLEFT" />
                            <Anchor point="TOPRIGHT" relativeKey="$parent" relativePoint="TOPRIGHT" />
                        </Anchors>
                    </Frame>

                    <Frame parentKey="Difficulty4" inherits="MIOG_AdventureJournalAbilityDifficultyTemplate" hidden="true">
                        <Anchors>
                            <Anchor point="TOPLEFT" relativeKey="$parent" relativePoint="TOPLEFT" />
                            <Anchor point="TOPRIGHT" relativeKey="$parent" relativePoint="TOPRIGHT" />
                        </Anchors>
                    </Frame>
                </Frames>

                <Layers>
                    <Layer level="BACKGROUND">
                        <Texture inherits="UI-PaperOverlay-AbilityTextBG" parentKey="Background" setAllPoints="true">
                            <Size x="12" y="12"/>
                        </Texture>
                    </Layer>
                </Layers>
            </Frame>
        </Frames>
    </Frame>
</Ui>