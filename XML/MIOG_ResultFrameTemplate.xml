<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\..\FrameXML\UI.xsd">    
    <Frame name="MIOG_ResultFrameTemplate" inherits="ResizeLayoutFrame, BackdropTemplate" virtual="true">
        <Layers>
            <Layer level="BACKGROUND">
                <Texture parentKey="Background">
                    <Color r="0.16470588235294117" g="0.16862745098039217" b="0.17254901960784313" a="1" />
                </Texture>
            </Layer>
        </Layers>

        <Frames>
            <Frame parentKey="StatusFrame" hidden="true" setAllPoints="true" >
                <Layers>
                    <Layer level="BACKGROUND">
                        <Texture setAllPoints="true">
                            <Color r="0.1" g="0.1" b="0.1" a="0.7" />
                        </Texture>
                    </Layer>
                    <Layer level="OVERLAY">
                        <FontString parentKey="FontString" font="Interface\Addons\MythicIOGrabber\res\fonts\LiberationMono-Regular.ttf" justifyH="CENTER" justifyV="MIDDLE" outline="NORMAL">
                            <FontHeight val="16"/>
                            <Anchors>
                                <Anchor point="CENTER" relativeKey="$parent" relativePoint="CENTER"/>
                            </Anchors>
                        </FontString>
                    </Layer>
                </Layers>
            </Frame>

            <Button parentKey="CancelApplication" inherits="IconButtonTemplate" hidden="true">
                <KeyValues>
                    <KeyValue key="icon" value="Interface\Addons\MythicIOGrabber\res\infoIcons\xSmallIcon.png" type="string" />
                    <KeyValue key="iconSize" value="16" type="number" />
                </KeyValues>
                <Size x="16" y="16" />
                <Anchors>
                    <Anchor point="TOPRIGHT" relativeKey="$parent" relativePoint="TOPRIGHT" x="-2" y="-2" />
                </Anchors>
            </Button>

            <Button parentKey="Invite" inherits="IconButtonTemplate" hidden="true">
                <KeyValues>
                    <KeyValue key="icon" value="Interface\Addons\MythicIOGrabber\res\infoIcons\checkmarkSmallIcon.png" type="string" />
                    <KeyValue key="iconSize" value="16" type="number" />
                </KeyValues>
                <Size x="16" y="16" />
                <Anchors>
                    <Anchor point="RIGHT" relativeKey="$parent.CancelApplication" relativePoint="LEFT" x="-2"/>
                </Anchors>
            </Button>

            <Frame parentKey="BasicInformation">
                <Size y="20" />

                <Anchors>
                    <Anchor point="TOPLEFT" relativeKey="$parent" relativePoint="TOPLEFT" x="0"/>
                    <Anchor point="TOPRIGHT" relativeKey="$parent" relativePoint="TOPRIGHT" x="0"/>
                </Anchors>

                <Layers>
                    <Layer level="BORDER">
                        <Texture parentKey="IconBorder">
                            <Size x="17" y="17" />
                            <Anchors>
                                <Anchor point="TOPLEFT" relativeKey="$parent" relativePoint="TOPLEFT" x="2" y="-2"/>
                            </Anchors>
                        </Texture>
                    </Layer>

                    <Layer level="ARTWORK">
                        <Texture parentKey="Icon" enableMouseClicks="true">
                            <Anchors>
                                <Anchor point="TOPLEFT" relativeKey="$parent.IconBorder" relativePoint="TOPLEFT" x="1" y="-1" />
                                <Anchor point="BOTTOMRIGHT" relativeKey="$parent.IconBorder" relativePoint="BOTTOMRIGHT" x="-1" y="1" />
                            </Anchors>
                        </Texture>
                    
                    </Layer>
                    
                    <Layer level="OVERLAY">
                        <FontString parentKey="Title" font="LibMono" justifyH="LEFT">
                            <FontHeight val="11"/>
                            <Size x="150" y="20"/>
                            <Anchors>
                                <Anchor point="LEFT" relativeKey="$parent.Icon" relativePoint="RIGHT" x="5" />
                            </Anchors>
                        </FontString>

                        <FontString parentKey="Primary" font="LibMono" justifyH="CENTER" text="0">
                            <FontHeight val="11"/>
                            <Size x="37" />
                            <Anchors>
                                <Anchor point="LEFT" relativeKey="$parent.Title" relativePoint="RIGHT" x="4" />
                            </Anchors>
                        </FontString>

                        <FontString parentKey="Secondary" font="LibMono" justifyH="CENTER" text="0">
                            <FontHeight val="11"/>
                            <Size x="37" />
                            <Anchors>
                                <Anchor point="LEFT" relativeKey="$parent.Primary" relativePoint="RIGHT" x="3"/>
                            </Anchors>
                        </FontString>

                        <FontString parentKey="Age" font="LibMono" justifyH="CENTER" text="0:00:00">
                            <FontHeight val="11"/>
                            <Size x="70" />
                            <Anchors>
                                <Anchor point="LEFT" relativeKey="$parent.Secondary" relativePoint="RIGHT" />
                            </Anchors>
                        </FontString>
                    </Layer>

                    <Layer level="ARTWORK">
                        <Texture parentKey="Friend" file="Interface\Addons\MythicIOGrabber\res\infoIcons\friend.png" hidden="true">
                            <Size x="17" y="17" />
                            <Anchors>
                                <Anchor point="LEFT" relativeKey="$parent.Age" relativePoint="RIGHT" y="1" />
                            </Anchors>
                            <Scripts>
                                <OnEnter>
                                    GameTooltip:SetOwner(self, "ANCHOR_CURSOR")
					                GameTooltip:SetText("A friend is in this group")
					                GameTooltip:Show()
                                </OnEnter>
					
                                <OnLeave>
				                    GameTooltip:Hide()
                                </OnLeave>
                            </Scripts>
                        </Texture>
                        
                        <Texture parentKey="Premade" file="Interface\Addons\MythicIOGrabber\res\infoIcons\link.png" hidden="true">
                            <Size x="17" y="17" />
                            <Anchors>
                                <Anchor point="TOPRIGHT" relativeKey="$parent" relativePoint="TOPRIGHT" x="-1" y="-1"/>
                            </Anchors>
                            <Scripts>
                                <OnLeave>
				                    GameTooltip:Hide()
                                </OnLeave>
                            </Scripts>
                        </Texture>
                        
                        <Texture parentKey="Divider" atlas="UI-LFG-DividerLine">
                            <Size y="2" />
                            <Anchors>
                                <Anchor point="BOTTOMLEFT" relativeKey="$parent" relativePoint="BOTTOMLEFT" />
                                <Anchor point="BOTTOMRIGHT" relativeKey="$parent" relativePoint="BOTTOMRIGHT"/>
                            </Anchors>
                        </Texture>
                    </Layer>
                </Layers>


            </Frame>

            <Frame parentKey="CategoryInformation">
                <Size y="20" />

                <Anchors>
                    <Anchor point="TOPLEFT" relativeKey="$parent.BasicInformation" relativePoint="BOTTOMLEFT"/>
                    <Anchor point="TOPRIGHT" relativeKey="$parent.BasicInformation" relativePoint="BOTTOMRIGHT"/>
                </Anchors>

                <Frames>
                    <Button parentKey="ExpandFrame" inherits="UIButtonTemplate" mixin="MultiStateButtonMixin">
                        <Size x="20" y="20" />
                        <Anchors>
                            <Anchor point="LEFT" relativeKey="$parent" relativePoint="LEFT" x="1" />
                        </Anchors>

                        <Scripts>
                            <OnLoad>
                                self:OnLoad()
                                self:SetMaxStates(2)
                                self:SetTexturesForBaseState("UI-HUD-ActionBar-PageDownArrow-Up", "UI-HUD-ActionBar-PageDownArrow-Down", "UI-HUD-ActionBar-PageDownArrow-Mouseover", "UI-HUD-ActionBar-PageDownArrow-Disabled")
                                self:SetTexturesForState1("UI-HUD-ActionBar-PageUpArrow-Up", "UI-HUD-ActionBar-PageUpArrow-Down", "UI-HUD-ActionBar-PageUpArrow-Mouseover", "UI-HUD-ActionBar-PageUpArrow-Disabled")
                                self:SetState(false)
                            </OnLoad>
                        </Scripts>
                    </Button>
                </Frames>

                <Layers>
                    <Layer level="ARTWORK">
                        <Texture parentKey="Comment" file="Interface\minimap\tracking\mailbox.blp" hidden="true">
                            <Size x="10" y="10" />
                            <Anchors>
                                <Anchor point="CENTER" relativeKey="$parent.ExpandFrame" relativePoint="CENTER" x="7" />
                            </Anchors>
                        </Texture>
                    </Layer>
                </Layers>

                <Layers>
                    <Layer level="OVERLAY">
                        <FontString parentKey="DifficultyZone" font="LibMono" justifyH="LEFT">
                            <FontHeight val="11"/>
                            <Size x="140" y="20"/>
                            <Anchors>
                                <Anchor point="LEFT" relativeKey="$parent.ExpandFrame" relativePoint="RIGHT" x="5" />
                            </Anchors>
                        </FontString>
                    </Layer>
                </Layers>

                <Layers>
                    <Layer level="OVERLAY">
                        <FontString parentKey="RoleComposition" font="LibMono" justifyH="LEFT">
                            <Anchors>
                                <Anchor point="LEFT" relativeKey="$parent.DifficultyZone" relativePoint="RIGHT" />
                            </Anchors>
                        </FontString>
                    </Layer>
                </Layers>

                <Frames>
                    <Frame parentKey="MemberPanel" hidden="true">
                        <Size x="160" y="16"/>
                        <Anchors>
                            <Anchor point="RIGHT" relativeKey="$parent" relativePoint="RIGHT" x="-21"/>
                        </Anchors>

                        <Frames>
                            <Frame parentKey="1" inherits="MIOG_GroupMemberTemplate">
                                <Size x="17" y="17" />
                                <Anchors>
                                    <Anchor point="LEFT" relativeKey="$parent" relativePoint="LEFT"/>
                                </Anchors>
                            </Frame>

                            <Frame parentKey="2" inherits="MIOG_GroupMemberTemplate">
                                <Size x="17" y="17" />
                                <Anchors>
                                    <Anchor point="LEFT" relativeKey="$parent.1" relativePoint="RIGHT" x="13"/>
                                </Anchors>
                            </Frame>

                            <Frame parentKey="3" inherits="MIOG_GroupMemberTemplate">
                                <Size x="17" y="17" />
                                <Anchors>
                                    <Anchor point="LEFT" relativeKey="$parent.2" relativePoint="RIGHT" x="13"/>
                                </Anchors>
                            </Frame>

                            <Frame parentKey="4" inherits="MIOG_GroupMemberTemplate">
                                <Size x="17" y="17" />
                                <Anchors>
                                    <Anchor point="LEFT" relativeKey="$parent.3" relativePoint="RIGHT" x="13"/>
                                </Anchors>
                            </Frame>

                            <Frame parentKey="5" inherits="MIOG_GroupMemberTemplate">
                                <Size x="17" y="17" />
                                <Anchors>
                                    <Anchor point="LEFT" relativeKey="$parent.4" relativePoint="RIGHT" x="13"/>
                                </Anchors>
                            </Frame>
                        </Frames>

                        <Layers>
                            <Layer level="ARTWORK" textureSubLevel="100">
                                <Texture parentKey="LeaderCrown" file="Interface\Addons\MythicIOGrabber\res\infoIcons\leaderIcon.png" hidden="true">
                                    <Size x="14" y="14" />
                                </Texture>
                            </Layer>
                        </Layers>
                    </Frame>
                    
                    <Frame parentKey="BossPanel" inherits="HorizontalLayoutFrame" hidden="true">
                        <KeyValues>
                            <KeyValue key="fixedHeight" value="16" />
                            <KeyValue key="leftPadding" value="5" />
                        </KeyValues>

                        <Anchors>
                            <Anchor point="BOTTOMRIGHT" relativeKey="$parent" relativePoint="BOTTOMRIGHT" x="-5" y="1"/>
                        </Anchors>
                    </Frame>
                </Frames>
            </Frame>

            <Frame parentKey="DetailedInformationPanel" inherits="MIOG_DetailedInformationPanelTemplate" />

        </Frames>
    </Frame>
</Ui>