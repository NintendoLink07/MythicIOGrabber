<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\..\FrameXML\UI.xsd">
    <Frame name="MIOG_ProgressOverviewCellTemplate" mixin="ProgressCellMixin" virtual="true">        
       <Layers>
			<Layer level="BORDER">
				<Texture parentKey="GuildBannerBackground" atlas="guildfinder-card-guildbanner-background">
					<Size y="192"/>
					<Anchors>
						<Anchor point="TOPLEFT" x="-8" y="12"/>
						<Anchor point="TOPRIGHT" x="8" y="12"/>
					</Anchors>
				</Texture>
			</Layer>
            
			<Layer level="BORDER" textureSubLevel="-2">
				<Texture parentKey="GuildBannerShadow" atlas="guildfinder-card-guildbanner-shadow">
					<Size y="192"/>
					<Anchors>
						<Anchor point="BOTTOMLEFT" relativeKey="$parent.GuildBannerBackground"/>
						<Anchor point="BOTTOMRIGHT" relativeKey="$parent.GuildBannerBackground"/>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="BORDER" textureSubLevel="2">
				<Texture parentKey="GuildBannerBorder" atlas="guildfinder-card-guildbanner-border">
					<Size y="192"/>
					<Anchors>
						<Anchor point="BOTTOMLEFT" relativeKey="$parent.GuildBannerBackground"/>
						<Anchor point="BOTTOMRIGHT" relativeKey="$parent.GuildBannerBackground"/>
					</Anchors>
				</Texture>
			</Layer>

			<Layer level="BORDER" textureSubLevel="3">
				<Texture parentKey="GuildBannerBorderGlow" atlas="guildfinder-card-guildbanner-border" hidden="true">
                    <Color r="0.85" g="0.62" b="0.09" a="1" />
					<Size y="192"/>
					<Anchors>
						<Anchor point="BOTTOMLEFT" relativeKey="$parent.GuildBannerBackground"/>
						<Anchor point="BOTTOMRIGHT" relativeKey="$parent.GuildBannerBackground"/>
					</Anchors>
				</Texture>
			</Layer>
            
            <Layer level="ARTWORK">
                <Texture parentKey="VaultStatus">
                    <Size x="48" y="44" />
                    <Anchors>
                        <Anchor point="CENTER" relativeKey="$parent.GuildBannerBackground" relativePoint="BOTTOM" y="24"/>
                    </Anchors>

                    <Scripts>
                        <OnEnter>
                            if(self.tooltipText) then
                                GameTooltip:SetOwner(self)
                                GameTooltip:SetText(self.tooltipText)
                                GameTooltip:Show()

                            end
                        </OnEnter>
                        <OnLeave function="GameTooltip_Hide" />
                    </Scripts>
                </Texture>
            </Layer>

            <Layer level="OVERLAY">
                <FontString parentKey="Name" font="GameFontHighlight" justifyH="CENTER" justifyV="MIDDLE" outline="NORMAL">
                    <Anchors>
                        <Anchor point="TOPLEFT" relativeKey="$parent" relativePoint="TOPLEFT" y="-8"/>
                        <Anchor point="TOPRIGHT" relativeKey="$parent" relativePoint="TOPRIGHT" y="-2" />
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
    
        <Frames>
            <Frame parentKey="Class" inherits="MIOG_ProgressFullCharacterIconTemplate">
                <Size x="32" y="32" />

                <Anchors>
                    <Anchor point="TOP" relativeKey="$parent.Name" relativePoint="BOTTOM" y="-6"/>
                </Anchors>
            </Frame>

            <Frame parentKey="Spec" inherits="MIOG_ProgressFullCharacterIconTemplate">
                <Size x="32" y="32" />

                <Anchors>
                    <Anchor point="TOP" relativeKey="$parent.Class" relativePoint="BOTTOM" y="-4"/>
                </Anchors>
            </Frame>
        </Frames>

        <Layers>
            <Layer level="OVERLAY">
                <FontString parentKey="ItemLevel" font="GameFontHighlight" justifyH="CENTER" justifyV="MIDDLE" outline="NORMAL">
                    <Anchors>
                        <Anchor point="TOP" relativeKey="$parent.GuildBannerBorder" relativePoint="BOTTOM" x="-1" y="6"/>
                    </Anchors>
                </FontString>

                <FontString parentKey="MythicPlusScore" font="GameFontHighlight" justifyH="CENTER" justifyV="MIDDLE" outline="NORMAL">
                    <Anchors>
                        <Anchor point="TOP" relativeKey="$parent.ItemLevel" relativePoint="BOTTOM" y="-2"/>
                    </Anchors>
                </FontString>

                <FontString parentKey="Normal" font="GameFontHighlight" justifyH="CENTER" justifyV="MIDDLE" outline="NORMAL">
                    <Anchors>
                        <Anchor point="TOP" relativeKey="$parent.MythicPlusScore" relativePoint="BOTTOM" y="-2"/>
                    </Anchors>
                </FontString>

                <FontString parentKey="Heroic" font="GameFontHighlight" justifyH="CENTER" justifyV="MIDDLE" outline="NORMAL">
                    <Anchors>
                        <Anchor point="TOP" relativeKey="$parent.Normal" relativePoint="BOTTOM" y="-2"/>
                    </Anchors>
                </FontString>

                <FontString parentKey="Mythic" font="GameFontHighlight" justifyH="CENTER" justifyV="MIDDLE" outline="NORMAL">
                    <Anchors>
                        <Anchor point="TOP" relativeKey="$parent.Heroic" relativePoint="BOTTOM" y="-2"/>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
    </Frame>
</Ui>