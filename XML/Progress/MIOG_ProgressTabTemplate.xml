<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\..\FrameXML\UI.xsd">
    <Frame name="MIOG_ProgressTabTemplate" mixin="ProgressMixin" virtual="true">
        <Frames>
            <Frame parentKey="Menu">
                <Size x="76" y="120"/>

                <Anchors>
                    <Anchor point="TOPLEFT"/>
                </Anchors>

                <Frames>
                    <Button parentKey="OverviewButton" name="Overview" inherits="MIOG_ProgressSelectionButtonTemplate" text="Overview">
                        <Anchors>
                            <Anchor point="TOPLEFT"/>
                            <Anchor point="TOPRIGHT"/>
                        </Anchors>
                    </Button>

                    <Button parentKey="MythicPlusButton" name="MythicPlus" inherits="MIOG_ProgressSelectionButtonTemplate" text="Mythic+">
                        <Anchors>
                            <Anchor point="TOPLEFT" relativeKey="$parent.OverviewButton" relativePoint="BOTTOMLEFT" y="-3"/>
                            <Anchor point="TOPRIGHT" relativeKey="$parent.OverviewButton" relativePoint="BOTTOMRIGHT" y="-3"/>
                        </Anchors>
                    </Button> 

                    <Button parentKey="RaidButton" name="Raid" inherits="MIOG_ProgressSelectionButtonTemplate" text="Raid">
                        <Anchors>
                            <Anchor point="TOPLEFT" relativeKey="$parent.MythicPlusButton" relativePoint="BOTTOMLEFT" y="-3"/>
                            <Anchor point="TOPRIGHT" relativeKey="$parent.MythicPlusButton" relativePoint="BOTTOMRIGHT" y="-3"/>
                        </Anchors>
                    </Button>

                    <Button parentKey="PVPButton" name="PVP" inherits="MIOG_ProgressSelectionButtonTemplate" text="PVP">
                        <Anchors>
                            <Anchor point="TOPLEFT" relativeKey="$parent.RaidButton" relativePoint="BOTTOMLEFT" y="-3"/>
                            <Anchor point="TOPRIGHT" relativeKey="$parent.RaidButton" relativePoint="BOTTOMRIGHT" y="-3"/>
                        </Anchors>
                    </Button> 

                    <Frame parentKey="OverviewElements" hidden="true">
                        <Size y="25" />

                        <Anchors>
                            <Anchor point="BOTTOMLEFT"/>
                            <Anchor point="BOTTOMRIGHT"/>
                        </Anchors>
                
                        <Layers>
                            <Layer level="OVERLAY">
                                <FontString parentKey="HonorLevel" font="GameFontHighlight" justifyH="CENTER" justifyV="MIDDLE" outline="NORMAL" text="Itemlevel: ">
                                    <Anchors>
                                        <Anchor point="TOPRIGHT"/>
                                    </Anchors>
                                </FontString>

                                <FontString parentKey="HonorProgress" font="GameFontHighlight" justifyH="CENTER" justifyV="MIDDLE" outline="NORMAL" text="Itemlevel: ">
                                    <Anchors>
                                        <Anchor point="TOPLEFT" relativeKey="$parent.HonorLevel" relativePoint="BOTTOMLEFT" y="-3"/>
                                        <Anchor point="TOPRIGHT" relativeKey="$parent.HonorLevel" relativePoint="BOTTOMRIGHT" y="-3"/>
                                    </Anchors>
                                </FontString>
                            </Layer>
                        </Layers>

                        <Frames>
                            <DropdownButton parentKey="VisibilityDropdown" inherits="WowStyle1DropdownTemplate" hidden="true">
                                <Size y="25" />

                                <Anchors>
                                    <Anchor point="TOPLEFT" relativeKey="$parent.HonorProgress" relativePoint="BOTTOMLEFT" y="-3"/>
                                    <Anchor point="TOPRIGHT" relativeKey="$parent.HonorProgress" relativePoint="BOTTOMRIGHT" y="-3"/>
                                </Anchors>
                            </DropdownButton>
                        </Frames>
                    </Frame>
                </Frames>
            </Frame>

            <Frame parentKey="Overview" mixin="ProgressOverviewMixin">
                <Anchors>
                    <Anchor point="TOPLEFT"/>
                    <Anchor point="BOTTOMRIGHT"/>
                </Anchors>

                <Frames>
                    <Frame parentKey="Info">
                        <Size x="76" />

                        <Anchors>
                            <Anchor point="TOPLEFT" relativeKey="$parent.$parent.Menu" relativePoint="BOTTOMLEFT" />
                            <Anchor point="BOTTOMLEFT"/>
                        </Anchors>

                        <Layers>
                            <Layer level="OVERLAY">
                                <FontString parentKey="ItemLevel" font="GameFontHighlight" justifyH="CENTER" justifyV="MIDDLE" outline="NORMAL" text="Itemlevel: ">
                                    <Anchors>
                                        <Anchor point="TOPRIGHT" y="-55"/>
                                    </Anchors>
                                </FontString>

                                <FontString parentKey="MythicPlus" font="GameFontHighlight" justifyH="CENTER" justifyV="MIDDLE" outline="NORMAL" text="Mythic+: ">
                                    <Anchors>
                                        <Anchor point="TOPRIGHT" relativeKey="$parent.ItemLevel" relativePoint="BOTTOMRIGHT" y="-2"/>
                                    </Anchors>
                                </FontString>

                                <FontString parentKey="Normal" font="GameFontHighlight" justifyH="CENTER" justifyV="MIDDLE" outline="NORMAL" text="Normal: ">
                                    <Anchors>
                                        <Anchor point="TOPRIGHT" relativeKey="$parent.MythicPlus" relativePoint="BOTTOMRIGHT" y="-2"/>
                                    </Anchors>
                                </FontString>

                                <FontString parentKey="Heroic" font="GameFontHighlight" justifyH="CENTER" justifyV="MIDDLE" outline="NORMAL" text="Heroic: ">
                                    <Anchors>
                                        <Anchor point="TOPRIGHT" relativeKey="$parent.Normal" relativePoint="BOTTOMRIGHT" y="-2"/>
                                    </Anchors>
                                </FontString>

                                <FontString parentKey="Mythic" font="GameFontHighlight" justifyH="CENTER" justifyV="MIDDLE" outline="NORMAL" text="Mythic: ">
                                    <Anchors>
                                        <Anchor point="TOPRIGHT" relativeKey="$parent.Heroic" relativePoint="BOTTOMRIGHT" y="-2"/>
                                    </Anchors>
                                </FontString>
                            </Layer>
                        </Layers>
                    </Frame>

                    <Frame parentKey="ScrollBox" inherits="WowScrollBoxList">
                        <Anchors>
                            <Anchor point="TOPLEFT" relativeKey="$parent.$parent.Menu" relativePoint="TOPRIGHT" />
                            <Anchor point="BOTTOMRIGHT" y="20"/>
                        </Anchors>
                    </Frame>

                    <EventFrame parentKey="ScrollBar" inherits="MIOG_MinimalHorizontalScrollBarTemplate">
                        <Size y="16" />
                        <KeyValues>
                            <KeyValue key="minThumbExtent" value="10" type="number"/>
                        </KeyValues>
                        <Anchors>
                            <Anchor point="BOTTOMLEFT" relativeKey="$parent" relativePoint="BOTTOMLEFT"/>
                            <Anchor point="BOTTOMRIGHT" relativeKey="$parent" relativePoint="BOTTOMRIGHT"/>
                        </Anchors>

                    </EventFrame>
                </Frames>

                <Scripts>
                    <OnLoad method="OnLoad" />
                    <OnShow method="OnShow" />
                </Scripts>
            </Frame>

            <Frame parentKey="MythicPlus" mixin="ProgressDungeonMixin" hidden="true">
                <Anchors>
                    <Anchor point="TOPLEFT" />
                    <Anchor point="BOTTOMRIGHT"/>
                </Anchors>
                
                <Frames>
                    <Frame parentKey="HeaderContainer">
                        <Size y="135"/>

                        <Anchors>
                            <Anchor point="TOPLEFT"/>
                            <Anchor point="TOPRIGHT"/>
                        </Anchors>
                    </Frame>

                    <Frame parentKey="ScrollBox" inherits="WowScrollBoxList">
                        <Anchors>
                            <Anchor point="TOPLEFT" relativeKey="$parent.HeaderContainer" relativePoint="BOTTOMLEFT"/>
                            <Anchor point="BOTTOMRIGHT"/>
                        </Anchors>
                    </Frame>
                </Frames>
                
                <Scripts>
                    <OnShow method="OnShow" />
                    <OnLoad method="OnLoad" />
                </Scripts>
            </Frame>
            
            <Frame parentKey="Raid" mixin="ProgressRaidMixin" hidden="true">
                <Anchors>
                    <Anchor point="TOPLEFT" />
                    <Anchor point="BOTTOMRIGHT"/>
                </Anchors>
                
                <Frames>
                    <Frame parentKey="HeaderContainer">
                        <Size y="135"/>

                        <Anchors>
                            <Anchor point="TOPLEFT"/>
                            <Anchor point="TOPRIGHT"/>
                        </Anchors>
                    </Frame>

                    <Frame parentKey="ScrollBox" inherits="WowScrollBoxList">
                        <Anchors>
                            <Anchor point="TOPLEFT" relativeKey="$parent.HeaderContainer" relativePoint="BOTTOMLEFT"/>
                            <Anchor point="BOTTOMRIGHT"/>
                        </Anchors>
                    </Frame>
                </Frames>
                
                <Scripts>
                    <OnShow method="OnShow" />
                    <OnLoad method="OnLoad" />
                </Scripts>
            </Frame>
            
            <Frame parentKey="PVP" mixin="ProgressPVPMixin" hidden="true">
                <Anchors>
                    <Anchor point="TOPLEFT" />
                    <Anchor point="BOTTOMRIGHT"/>
                </Anchors>
                
                <Frames>
                    <Frame parentKey="HeaderContainer">
                        <Size y="135"/>

                        <Anchors>
                            <Anchor point="TOPLEFT"/>
                            <Anchor point="TOPRIGHT"/>
                        </Anchors>
                    </Frame>

                    <Frame parentKey="ScrollBox" inherits="WowScrollBoxList">
                        <Anchors>
                            <Anchor point="TOPLEFT" relativeKey="$parent.HeaderContainer" relativePoint="BOTTOMLEFT"/>
                            <Anchor point="BOTTOMRIGHT"/>
                        </Anchors>
                    </Frame>
                </Frames>
                
                <Scripts>
                    <OnShow method="OnShow" />
                    <OnLoad method="OnLoad" />
                </Scripts>
            </Frame>
        </Frames>

        <Scripts>
            <OnShow method="OnShow" />
        </Scripts>
    </Frame>
</Ui>